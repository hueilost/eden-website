<div class="container-fluid p-0 pb-5 mb-5">
    <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="hidden lg:flex carousel-indicators">
            <% if(locals.carousel_item && locals.carousel_item.length != undefined && locals.carousel_item.length > 0) {%>  
                <% for(let i=0; i < carousel_item.length; i++) {%>
                    <% if(i == 0) {%>
                        <li data-target="#header-carousel" data-slide-to="<%=i%>" class="active"></li>
                    <%} else {%>
                        <li data-target="#header-carousel" data-slide-to="<%=i%>"></li>
                    <%}%>        
                 <%}%>
            <%}%>
        </ol>
        <div class="carousel-inner">
            <% if(locals.carousel_item && locals.carousel_item.length != undefined && locals.carousel_item.length > 0) {%>  
               <% for(let i=0; i < carousel_item.length; i++) {%>
                   <%- carousel_item[i] %>
                <%}%>
            <%}%>
        </div>
    </div>
</div>